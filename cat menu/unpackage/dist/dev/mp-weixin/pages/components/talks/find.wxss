
.title {
	width: 150rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	background-color: #ffecd2;
	border-radius: 60rpx;
	-webkit-transform: translateX(15px);
	        transform: translateX(15px);
}
.contentChoose {
	margin: 6px auto 6px auto;
	width: 700rpx;
	height: 180rpx;
	background-color: #ffffff;
	border-radius: 40rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}
.allchoices {
	width: 180rpx;
	height: 100%;
}
.allchoices image {
	width: 100rpx;
	height: 100rpx;
	-webkit-transform: translate(38rpx,10rpx);
	        transform: translate(38rpx,10rpx);
}
.knowIcon {
	-webkit-transform: translate(22px,5px);
	        transform: translate(22px,5px);
}
.talkIcon {
	width: 60px;
	-webkit-transform: translate(16px,7px);
	        transform: translate(16px,7px);
}
.chooseWord {
	text-align: center;
	-webkit-transform: translateY(10px);
	        transform: translateY(10px);
	font-family: STCaiyun;
	color: #fbd48f;
}
.moreContent {
	width: 700rpx;
	margin: 0 auto;
	border-top: 0.1px solid transparent;
	background-color: #fff;
}
.userMsg {
	margin: 10px auto 0 auto;
	width: 660rpx;
	height: 180rpx;
	border-bottom: 1px solid #A9A9A9;
}
.usersPhoto {
	width: 50px;
	height: 50px;
	-webkit-transform: translate(16px,16px);
	        transform: translate(16px,16px);
	border-radius: 10px;
	vertical-align: middle;
}
.introduce {
	width: 500rpx;
	-webkit-transform: translate(75px,-30px);
	        transform: translate(75px,-30px);
}
.summary {
	font-weight: bold;
}
.replenish {
	display: block;
	font-size: 12px;
	color: #A9A9A9;
	margin: 5px 0 0 0;
}
.findSpecial {
	float: right;
	width: 140rpx;
	height: 50rpx;
	text-align: center;
	line-height: 50rpx;
	background-color: #fec374;
	border-radius: 60rpx;
	-webkit-transform: translateY(-70rpx);
	        transform: translateY(-70rpx);
	font-weight: 600;
}
.special {
	width: 120rpx !important;
	-webkit-transform: translate(30rpx,10rpx) !important;
	        transform: translate(30rpx,10rpx) !important;
}


