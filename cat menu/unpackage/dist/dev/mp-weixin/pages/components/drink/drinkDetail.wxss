
.detail {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.detailLeft {
	width: 28%;
	display: flex;
	flex-direction: column;
}
.leftContent {
	width: 100%;
	height: 250rpx;
	/* height: 16%; */
}
.leftContent image {
	margin: 30rpx auto 10rpx auto;
	width: 35rpx;
	height: 40rpx;
	display: block;
	-webkit-transform: translateY(60rpx);
	        transform: translateY(60rpx);
}
.leftImage {
	width: 40rpx !important;
}
.leftMsg {
	display: inline-block;
	width: 100%;
	height: 30rpx;
	font-size: 12px;
	text-align: center; 	
	line-height: 30rpx;
	-webkit-transform: translateY(60rpx);
	        transform: translateY(60rpx);
}
.leftContentActive {
	color: #3fdcd2;
	background-color: #fff;
}

/* .detailMore {
	width: 3%;
	height: 968rpx;
	background-color: #fff;
} */
.detailRight {
	width: 72%;
	display: flex;
	flex-direction: column;
	border-left: 8px solid #fff;
}
.rightTea {
	height: 160rpx !important;
	-webkit-transform: translateY(30rpx) !important;
	        transform: translateY(30rpx) !important;
}
.milkTeas {
	margin: 0 0 1px 0;
	width: 100%;
	height: 240rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
}
.teaPhoto,.teaContent,.teaChoose {
	height: 100%;
}
.teaPhoto,.teaChoose {
	flex: 1;
}
.teaContent {
	flex: 2;
	-webkit-transform: translateX(5px);
	        transform: translateX(5px);
	margin: 60rpx 0 0 0;
}
.teaPhoto image {
	width: 160rpx;
	height: 200rpx;
	-webkit-transform: translateY(20rpx);
	        transform: translateY(20rpx);
}
.teaName {
	font-size: 16px;
	margin: 0 0 0 10px;
}
.price {
	font-weight: bold;
	margin: 10px 0 4px 10px;
}
.priceBefore {
	font-weight: normal;
	font-size: 10px;
	text-decoration:line-through;
	color: #cccccc;
	padding: 5px 0 0 5px;
}
.priceDecline {
	display: inline;
	margin: 0 0 0 10px;
	font-size: 10px;
	border: 1px solid #fe3a39;
	border-radius: 6px;
	color: #fe3a39;
	font-weight: 600;
}
.chooseSize {
	width: 100%;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border-radius: 50rpx;
	background-color: #95d6bf;
	-webkit-transform: translate(-4rpx,120rpx);
	        transform: translate(-4rpx,120rpx);
	color: #f5faf8;
	font-size: 14px;
}

