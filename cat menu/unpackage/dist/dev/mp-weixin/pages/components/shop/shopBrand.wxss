
.brand {
	margin: 0 auto;
	width: 700rpx;
	height: 300rpx;
}
.top {
	width: 100%;
	height: 60rpx;
}
.word {
	display: inline-block;
	-webkit-transform: translate(12px,5px);
	        transform: translate(12px,5px);
}
.brandAll {
	display: inline-block;
	float: right;
	font-size: 10px;
	-webkit-transform: translate(-16px,8px);
	        transform: translate(-16px,8px);
	color: #eea396;
}
.pointer {
	float: right;
	width: 5px;
	height: 5px;
	-webkit-transform: translate(65px,13px) rotate(45deg);
	        transform: translate(65px,13px) rotate(45deg);
	border-top: 1px solid #a7a7a7 ;
	border-right: 1px solid #a7a7a7;
}
.example {
	margin: 6px 0 0 0;
	width: 700rpx;
	height: 240rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}
.brands {
	width: 180rpx;
	height: 100%;
	text-align: center;
}
.brandPhoto image {
	width: 70%;
	height: 50%;
}
.brandPhoto{
	margin: 0 auto;
	width: 175rpx;
	height: 240rpx;
}


