
.frame {
	margin: 0 auto;
	width: 700rpx;
	height: 780rpx;
	overflow: scroll;
}
.doctorWord,.customerWord {
	margin: 0 0 20px 0;
}
.customerWord {
	width: 100%;
}
.customerWord image {
	width: 50px;
	height: 50px;
	border-radius: 50rpx;
	vertical-align: text-bottom;
	-webkit-transform: translateX(42px);
	        transform: translateX(42px);
}
.doctorWord image {
	width: 50px;
	height: 50px;
	border-radius: 50rpx;
	vertical-align: text-bottom;
}
.customerWordContent {
	display: inline-block;
	width: 70%;
	background-color: #f2f8f8;
	border-radius: 12rpx;
	-webkit-transform: translateX(40px);
	        transform: translateX(40px);
	font-size: 15px;
}
.wordContent {
	display: inline-block;
	margin: 0 0 0 20px;
	width: 70%;
	background-color: #f2f8f8;
	border-radius: 12rpx;
	font-size: 15px;
}
.warn {
	margin: 20px auto 20px auto;
	width: 610rpx;
	height: 70rpx;
	background-color: #efefef;
	color: #7f7f7f;
	border-radius: 16rpx;
	font-size: 12px;
}
.inputPlace {
	margin: 0 auto;
	position: absolute;
	top: 84%;
	left: 3.25%;
	width: 700rpx;
	height: 210rpx;
	z-index: 1;
}
.inputFrame {
	width: 100%;
	height: 50%;
}
.inputFrame input {
	width: 75%;
	height: 100%;
	border-radius: 30rpx;
	background-color: #f9f9f9;
	font-size: 18px;
	display: inline-block;
	-webkit-transform: translateX(5px);
	        transform: translateX(5px);
}
.otherWay {
	width: 100%;
	height: 50%;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
}
.key {
	display: inline-block;
	width: 20%;
	height: 70rpx;
	background-color: #93d7be;
	border-radius: 60rpx;
	line-height: 70rpx;
	text-align: center;
	color: #fff;
	-webkit-transform: translate(15px,-20px);
	        transform: translate(15px,-20px);
}
.ways image {
	width: 40rpx;
	height: 44rpx;
	vertical-align: text-top;
}
.once {
	width: 50rpx !important;
	height: 48rpx !important;
}
.submit {
	width: 54rpx !important;
}
.ways ._span {
	margin: 0 0 0 4px;
	font-size: 12px;
}


