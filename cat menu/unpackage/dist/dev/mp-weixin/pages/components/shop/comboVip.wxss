
.allContent {
	margin: 0 auto;
	width: 700rpx;
	height: 300rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}
.combo,.vip {
	width: 48%;
	height: 100%;
}
.trait {
	display: inline-block;
	padding: 1px;
	font-size: 12px;
	-webkit-transform: translateX(8px);
	        transform: translateX(8px);
	background-color: #fa6306;
	color: #fff;
	border-radius: 3px;
}
.comboIntro {
	font-size: 12px;
	color: #b63028;
	-webkit-transform: translateY(5px);
	        transform: translateY(5px);
}
.comboPhoto {
	width: 100%;
	height: 75%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	position: relative;
}
.photo {
	width: 50%;
	height: 70%;
	text-align: center;
}
.photo image {
	width: 60px;
	height: 60px;
}
.price {
	color: #b63028;
	font-size: 12px;
}
.priceBefore {
	display: inline-block;
	float: right;
	color: #a9a9a9;
	font-size: 10px;
	text-decoration: line-through;
	-webkit-transform: translateX(-5rpx);
	        transform: translateX(-5rpx);
}


